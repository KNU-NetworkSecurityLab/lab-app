<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    android:foreground="?attr/selectableItemBackground"
    android:background="@drawable/round_white_outline_10"
    android:orientation="vertical"
    android:padding="@dimen/text_box_padding">

    <TextView
        android:id="@+id/tv_item_book_name"
        style="@style/subTitleColorTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Do it! 안드로이드 프로그래밍"
        android:textColor="@color/main_color" />

    <TextView
        android:id="@+id/tv_item_book_author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/gap_line"
        android:text="김XX 지음"
        android:textColor="@color/gray_80"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list_book_tag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/gap_line"
        tools:listitem="@layout/item_book_tag" />

</LinearLayout>