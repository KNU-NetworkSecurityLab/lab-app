<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/gap_vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/gap_horizontal">

        <TextView
            android:id="@+id/tv_item_member_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="@color/main_color_100"
            android:textSize="30sp"
            android:textStyle="bold"
            tools:text="홍길동" />

        <TextView
            android:id="@+id/tv_item_member_degree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/gap_line"
            android:textSize="15sp"
            tools:text="17학번 | 랩장" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_item_member_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/gap_line"
        android:paddingHorizontal="@dimen/gap_horizontal"
        android:textSize="@dimen/text_size_15"
        tools:text="example@nsl.ac.kr" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_item_member_skills"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/gap_horizontal"
        android:layout_marginTop="@dimen/gap_line" />

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="@dimen/gap_vertical"
        android:background="@color/gray_20" />

</LinearLayout>