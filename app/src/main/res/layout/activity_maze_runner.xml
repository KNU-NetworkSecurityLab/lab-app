<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="horizontal"
    tools:context=".pages.easteregg.MazeRunnerActivity">

    <GridLayout
        android:id="@+id/maze_runner_grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/maze_runner_control"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/gap_line_double"
            android:layout_marginTop="@dimen/gap_vertical"
            android:layout_weight="1"
            android:text="Maze Runner"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/gap_vertical"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btn_move_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:src="@drawable/ic_play_arrow"
                app:tint="@color/white" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btn_move_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/black"
                    android:rotation="270"
                    android:src="@drawable/ic_play_arrow" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_ball"
                    app:tint="@color/white" />

                <ImageButton
                    android:id="@+id/btn_move_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/black"
                    android:rotation="90"
                    android:src="@drawable/ic_play_arrow" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/btn_move_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:rotation="180"
                android:src="@drawable/ic_play_arrow" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>