<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NSL_app" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->


        <item name="android:checkboxStyle">@style/customCheckBox</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:buttonStyle">@style/customBtnStyle</item>

        <!-- 기본 배경 화면 색상 -->
        <item name="android:windowBackground">@color/white</item>

        <!--        <item name="bottomSheetDialogTheme">@style/CustomBottomSheetDialog</item>-->
    </style>

    <style name="customBtnStyle" parent="TextAppearance.AppCompat.Button">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="customCheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:buttonTint">@color/main_color</item>
    </style>

    <style name="customDatePickerTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/main_color</item>
    </style>

    <style name="customTimePickerTheme" parent="android:Widget.Material.Light.TimePicker">
        <item name="colorAccent">@color/main_color</item>
        <item name="android:timePickerMode">spinner</item>
    </style>

    <style name="titleStyleCenter">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">30sp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="subTitleColorTextStyle">
        <item name="android:textColor">@color/main_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="subTitleTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>


    <!-- BottomSheetDialog -->
    <style name="CustomBottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
    </style>

    <style name="CustomBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearanceBottomSheetDialog</item>
    </style>

    <style name="CustomShapeAppearanceBottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

</resources>