<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/main_color_110" />
            <stroke android:width="0dp" android:color="#4b4c4c" />
            <corners android:radius="10dp" />

        </shape>
    </item>

    <item android:state_pressed="false">
        <shape>
            <gradient android:startColor="#2E71FF"
                android:endColor="@color/main_color_100"
                android:angle="135"/>
            <stroke android:width="0dp" android:color="#0000ff" />
            <corners android:radius="10dp" />
        </shape>
    </item>
</selector>